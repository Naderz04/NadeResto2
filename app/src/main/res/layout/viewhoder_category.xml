<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="80dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:backgroundTint="@color/white">

    <ImageView
        android:id="@+id/categoryPic"
        android:layout_width="70dp"
        android:layout_height="66dp"
        android:paddingTop="12dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/naderestobeef" />

    <TextView
        android:id="@+id/categoryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Meet on Meat"
        android:textColor="@color/brown"
        android:textSize="12sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:paddingBottom="3dp"
        android:paddingStart="7dp"
        app:layout_constraintEnd_toEndOf="@id/categoryPic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/categoryPic"
        tools:layout_constraintStart_toStartOf="@id/categoryPic" />

</androidx.constraintlayout.widget.ConstraintLayout>