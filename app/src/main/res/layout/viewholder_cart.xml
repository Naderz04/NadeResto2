<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="16dp"
    android:elevation="3dp">

    <ImageView
        android:id="@+id/picc"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/naderestobeef" />

    <TextView
        android:id="@+id/TitleTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:text="Title"
        android:fontFamily="sans-serif-condensed"

        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/picc"
        app:layout_constraintTop_toTopOf="@id/picc"/>

    <ImageView
        android:id="@+id/minus_cart"
        android:layout_width="38dp"
        android:layout_height="35dp"
        android:background="@drawable/orange_backgrd"
        app:layout_constraintBottom_toBottomOf="@+id/picc"
        app:layout_constraintStart_toStartOf="@+id/TitleTxt"
        app:srcCompat="@drawable/remove_24px"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/itemnumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="21dp"
        android:text="1"
        android:textSize="25dp"
        android:fontFamily="sans-serif-condensed"

        app:layout_constraintBottom_toBottomOf="@+id/minus_cart"
        app:layout_constraintEnd_toStartOf="@+id/pluscart"
        app:layout_constraintStart_toEndOf="@+id/minus_cart"
        app:layout_constraintTop_toTopOf="@+id/TitleTxt"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/pluscart"
        android:layout_width="38dp"
        android:layout_height="35dp"
        android:layout_marginStart="48dp"
        app:tint="@color/white"
        android:layout_marginBottom="4dp"
        android:background="@drawable/orange_backgrd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/minus_cart"
        app:srcCompat="@drawable/add_24px" />

